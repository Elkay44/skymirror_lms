# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=skymirror_prod

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_generate_using_openssl_rand_base64_32
NEXTAUTH_URL=https://your-domain.com

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# Application Configuration
NODE_ENV=production

# Email Configuration (if using email provider)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@your-domain.com

# Storage Configuration (if using S3)
# S3_ACCESS_KEY_ID=your_s3_access_key
# S3_SECRET_ACCESS_KEY=your_s3_secret_key
# S3_REGION=your_s3_region
# S3_BUCKET=your_s3_bucket_name

# Google OAuth (if using Google Auth)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (if using GitHub Auth)
# GITHUB_ID=your_github_client_id
# GITHUB_SECRET=your_github_client_secret
